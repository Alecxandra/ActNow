<div class="p_session upper-top" syle="margin:0px">
 <br><br><br><br>
 <div class="row"> 
   <div  class="col s6 offset-s3" style="background-color: rgba(0, 0, 0, 0.8); ">
     <br>
       <div align="center">
          <%= image_tag 'Logo_ActNow.png', width: "250px", height:"190px"%>
       </div>
       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row ">
                <div class="input-field col s6 offset-s3">
                  <i class="material-icons prefix">email</i>
                  <%= f.email_field :email, autofocus: true %>
                  <label for="email">Correo</label>
                </div> 
               </div> 
          <div class="row">
            <div class="input-field col s6 offset-s3">
              <i class="material-icons prefix">vpn_key</i>
              <%= f.password_field :password, autocomplete: "off" %>
              <label for="password">Contraseña</label>
            </div> 
        </div>          
          <div class="row"> 
           <% if devise_mapping.rememberable? -%>
              <div class=" col s6 offset-s3">
                <%= f.check_box :remember_me%>
                <label for="user_remember_me" >No cerrar sesión</label>
              </div>
            <% end -%>      
          </div>
          
         <div class="row">
      <div class="input-field col s6 offset-s5">
         <button class="waves-effect waves-light btn green accent-4">Entrar</button>
      </div>
  </div>
         <div class="row">
           <div class="col s6 offset-s3">
             <%= link_to "¿No tienes cuenta? registrate", new_registration_path(resource_name), style:"color:#FFFFFF" %>
           </div>
         </div>
<% end %>
     
   </div>  
 </div>

</div>



